// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  googleId       String?   @unique
  displayName    String?
  photoUrl       String?
  hiddenFeedTags String[]  @default([]) // Tag IDs to hide from activity feed
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  lastLoginAt    DateTime?

  // Relations
  recipes       Recipe[]
  tasks         Task[]
  contacts      Contact[]
  gmailAccounts GmailAccount[]
  tags          Tag[]

  @@map("users")
}

// Gmail Integration Models
model GmailAccount {
  id              String    @id @default(uuid())
  email           String    // Gmail address
  isPrimary       Boolean   @default(false)
  isActive        Boolean   @default(true)
  accessToken     String    // Encrypted OAuth access token
  refreshToken    String    // Encrypted OAuth refresh token
  tokenExpiresAt  DateTime
  historyId       String?   // Gmail history ID for incremental sync
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastSyncAt      DateTime?
  
  // Relations
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  watches         GmailWatch[]

  @@map("gmail_accounts")
  @@unique([userId, email])
  @@index([userId])
  @@index([email])
}

model GmailWatch {
  id              String    @id @default(uuid())
  resourceId      String    // Gmail watch resource ID
  expiration      DateTime  // Watch expiration time
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  gmailAccountId  String
  gmailAccount    GmailAccount @relation(fields: [gmailAccountId], references: [id], onDelete: Cascade)

  @@map("gmail_watches")
  @@index([gmailAccountId])
  @@index([expiration])
}

model Recipe {
  id           String    @id @default(uuid())
  title        String
  description  String?
  ingredients  String[]  // Array of ingredient strings
  instructions String[]
  servings     Int?
  prepTime     Int?     // In minutes
  cookTime     Int?     // In minutes
  imageUrl     String?
  sourceUrl    String?   // URL where recipe was imported from
  isDeleted    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  // Relations
  userId       String
  user         User      @relation(fields: [userId], references: [id])

  @@map("recipes")
  @@index([userId])
}

model Task {
  id                String    @id @default(uuid())
  title             String
  status            String    // "complete" or "incomplete"
  dueDate           DateTime
  category          String    // "Roo Vet", "Roo Code", "Personal"
  isPriority        Boolean   @default(false)
  createdAt         DateTime  @default(now())
  completedAt       DateTime?
  isRolledOver      Boolean   @default(false)
  displayOrder      Int       // For ordering tasks within a day
  
  // Relations
  userId            String
  user              User      @relation(fields: [userId], references: [id])

  @@map("tasks")
  @@index([userId])
  @@index([dueDate])
}

// CRM Models
model Contact {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String
  company     String?
  title       String?
  notes       String?
  linkedInUrl String?
  birthday    DateTime?
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  emails      ContactEmail[]
  phones      ContactPhone[]
  versions    ContactVersion[]
  tags        ContactTag[]

  @@map("contacts")
  @@index([userId])
  @@index([firstName, lastName])
}

model ContactEmail {
  id          String    @id @default(uuid())
  email       String
  label       String    // e.g., "work", "personal", "other"
  isPrimary   Boolean   @default(false)
  
  // Relations
  contactId   String
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@map("contact_emails")
  @@index([contactId])
  @@index([email])
}

model ContactPhone {
  id          String    @id @default(uuid())
  phone       String
  label       String    // e.g., "mobile", "work", "home"
  isPrimary   Boolean   @default(false)
  
  // Relations
  contactId   String
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@map("contact_phones")
  @@index([contactId])
}

model ContactVersion {
  id          String    @id @default(uuid())
  version     Int       // Sequential version number
  snapshot    Json      // Full snapshot of contact data at this version
  changes     Json      // Object describing what changed from previous version
  createdAt   DateTime  @default(now())
  
  // Relations
  contactId   String
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@map("contact_versions")
  @@index([contactId])
  @@index([contactId, version])
}

// Tag Models
model Tag {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  
  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  contacts  ContactTag[]

  @@map("tags")
  @@unique([userId, name])  // Tag names unique per user
  @@index([userId])
}

model ContactTag {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  
  // Relations
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@map("contact_tags")
  @@unique([contactId, tagId])
  @@index([contactId])
  @@index([tagId])
}
