# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# Database Configuration
DATABASE_URL=postgresql://admin:password@your-rds-endpoint:5432/recipe_app

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your-session-secret

# Deployment URLs
FRONTEND_URL=https://organizer.dannyleffel.com
API_URL=https://api.organizer.dannyleffel.com

# Cookie Configuration
# Set to 'true' for cross-origin cookie support (Railway preview environments)
CROSS_SITE_COOKIES=false
# Optional: Set explicit cookie domain (leave unset for automatic host-based scoping)
# COOKIE_DOMAIN=

# Development Login
# Set to 'true' to enable dev login in production mode (useful for Railway preview environments)
ENABLE_DEV_LOGIN=false

# Gmail Integration
# Google OAuth credentials (same as used for login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Gmail-specific OAuth redirect URL (defaults to REDIRECT_URL with path changed)
# GMAIL_REDIRECT_URL=https://api.organizer.dannyleffel.com/api/gmail/callback

# Gmail Pub/Sub topic for real-time notifications
# Format: projects/{project-id}/topics/{topic-name}
GMAIL_PUBSUB_TOPIC=projects/your-project-id/topics/gmail-notifications

# Encryption key for storing OAuth tokens (32 bytes = 64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GMAIL_TOKEN_ENCRYPTION_KEY=your-64-character-hex-encryption-key